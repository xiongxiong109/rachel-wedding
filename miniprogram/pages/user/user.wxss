/* pages/user/user.wxss */
.index-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(194, 71, 71);
  z-index: 99;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.layout-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(3px);
  /* filter: brightness(0); */
  /* opacity: 0; */
  animation: filterToFade .3s ease-in both;
}
.open-tip {
  padding: 10rpx;
  font-size: 36rpx;
  color: #fff;
}
.open-btn {
  opacity: 0;
  padding: 0;
  background-color: rgb(224, 222, 75);
  max-width: 200rpx;
  width: 200rpx;
  height: 200rpx;
  max-height: 200rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 5px #555, 0 2px rgb(223, 128, 20) inset;
  border: 2px solid rgb(223, 219, 20);
  animation: scaleInOut 3s ease infinite both;
}

/* 信封 */
.poster {
  background-color: #fff;
  margin: 32rpx 16rpx;
  border-radius: 8rpx;
  padding: 10rpx 32rpx;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.guest {
  font-size: 32rpx;
  font-weight: bold;
  color: #555;
  padding: 0 6px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.male, .female {
  font-weight: bold;
  padding: 0 10rpx;
}
.male {
  color: rgb(31, 37, 94);
}
.female {
  color: rgb(131, 28, 45);
}

.touch-txt {
  transition: .3s ease;
}
.touch-txt:active {
  opacity:  .5;
}

.touch-link text {
  color: #0086f6;
  font-size: 32rpx;
}
.touch-link .sub {
  color: #222;
  font-size: .8em;
}

.poi-row {
  display: flex;
  align-items: flex-start;
}
.poi-row .iconfont {
  width: 40rpx;
  font-size: 40rpx;
  padding-right: 10rpx;
}
.poi-row .iconfont::before {
  vertical-align: middle;
}
.row-bar {
  flex: 1
}

.accept-btn {
  height: 80rpx;
  border-radius: 80rpx;
  color: #fff;
  background: linear-gradient(134deg,#ffc649,#ffa000 99%);
}

/* 邀请区域 */
.invite-area {
  text-align: center;
}

.invite-area .iconfont {
  font-size: 60rpx;
  color: #ffa000;
  display: block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: auto;
}

.invite-area .iconfont::before {
  vertical-align: 0;
}

.accepted-area {
  text-align: center;
  position: relative;
  padding-top: 80rpx;
}

.cancel-btn {
  font-weight: normal;
  color: #999;
  font-size: 24rpx;
}

.loading {
  animation: loadingCircle .8s linear infinite;
}

.accept-tip {
  color:  #2d96d3;
  padding: 20rpx 10rpx;
  display: block;
}

.sign-img {
  opacity: 0;
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
  transform: rotate(0) scale(1.5);
}

@keyframes loadingCircle {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(359deg);
  }
}

@keyframes scaleInOut {
  0%, 100% {
    transform: scale(1.1)
  }
  50% {
    transform: scale(0.9);
  }
}

@keyframes filterToFade {
  from {
    /* filter: blur(10px); */
    opacity: 0;
  }
  to {
    /* filter: blur(2px); */
    opacity: .1;
  }
}